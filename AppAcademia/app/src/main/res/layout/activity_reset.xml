<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".paginaRegistro">

    <TextView
        android:id="@+id/username_reset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolher nova senha"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        android:textSize="32sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/password_reset"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="Digite a senha nova"
        android:textColor="@color/white"
        android:textColorHint="#C6C5C5"
        android:textSize="24sp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/username_reset_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.067"/>


    <EditText
        android:id="@+id/repassword_reset"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="confirme a senha nova"
        android:textColor="@color/white"
        android:textColorHint="#C6C5C5"
        android:textSize="24sp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/password_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.029"/>


    <Button
        android:id="@+id/btnconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REDEFINIR SENHA"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/repassword_reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>




</androidx.constraintlayout.widget.ConstraintLayout>